@using Xpos307.ViewModels
@model VMTblProduct
@{
    Layout = null;
}

<div class="h2">Product</div>
<br>

<div class="card">
    <form id="frmProduct" method="post" asp-action="Delete">
        <div class="card-header align-content-center h2">Delete</div>
        <div class="card-body">
            <input type="hidden" name="Id" value="@Model.Id"/>
            <p class="h3">Are you SURE want to remove Product ?</p>
        </div>
        <div class="card-footer">
            <input type="hidden"  name="UpdateBy" value="3"/>
            <button type="submit" class="btn btn-danger" id="btnSave"><i class="fas fa-trash-alt"></i></button>
            <button type="Button" class="btn btn-primary" id="btnCancel">Cancel</button>
        </div>
    </form>
</div>

<script>
    $("#btnCancel").click(function () {
        $("#MyModal").modal("hide");
    });
</script>