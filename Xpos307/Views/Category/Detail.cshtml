@using Xpos307.ViewModels
@model VMTblCategory
@{
    Layout = null;
}

<div class="h2">Category</div>
<br>
<div class="card">
    <form  id="frmDeleteCategory" asp-action="Detail">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="card-header">Detail</div>
        <div class="card-body">
           <div class="mb-3">
                <label>Name</label>
                <input type="text" name="Name" class="form-control" value="@Model.Name" disabled/>
                <input type="hidden" name="Id" value="@Model.Id">
            </div>
            <div class="mb-3">
                <label>Description</label>
                <input type="text" name="Description" class="form-control" value="@Model.Description" disabled/>
            </div>
        </div>
        <div class="card-footer">
            <button type="Button" class="btn btn-primary" id="btnCancel">Back</button>
        </div>
    </form>
</div>

<script>
    $("#btnCancel").click(function () {
        $("#MyModal").modal("hide");
    });
</script>