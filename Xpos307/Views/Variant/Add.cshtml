@using Xpos307.ViewModels
@model VMTblCategory
@{
    Layout = null;
}

<div class="h2">Variant</div>
<br>
<div class="card">
  <form id="frmVariant" method="post" asp-action="Add">
    <div class="card-header">Create New</div>
        <div class="card-body">
            <div class="mb-3">
               <label>Name</label>
               <input type="text" name="Name" class="form-control"/>
            </div>
            <div class="mb-3">
                <label>Category</label>
                <select name="categoryId" class="form-control">
                    <option value="">-- Category --</option>
                    @foreach (VMTblCategory category in ViewBag.category)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label>Description</label>
                <input type="text" name="Description" class="form-control" />
            </div>
        </div>
        <div class="card-footer"> 
            <input type="hidden" name="CreateBy" value="4"/>
            <button type="submit" class="btn btn-primary" id="btnSave"> Create </button>
            <button type="button" class="btn btn-primary" id="btnCancel"> Cancel </button>
        </div>
   </form>
</div>

<script>
    $("#btnCancel").click(function () {
        $("#MyModal").modal("hide");
    });

    $("#frmVariant").validate({
        errorClass: "text-danger",
        rules:{
            Name: "required",
            categoryId: "required"
        }
    });
</script>