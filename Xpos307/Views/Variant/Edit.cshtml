@using Xpos307.ViewModels
@model VMTblVariant
@{
    Layout = null;
}

<div class="h2">Variant</div>
<br>
<div class="card">
  <form id="frmEditVariant" method="post" asp-action="Edit">
    <div class="card-header">Edit Menu</div>
        <div class="card-body">
            <div class="mb-3">
               <label>Name</label>
               <input type="text" name="Name" class="form-control"value="@Model.Name"/>
                <input type="hidden" name="Id" value="@Model.Id"/>
            </div>
            <div class="mb-3">
                <label>Category</label>
                <select name="CategoryId" class="form-control">
                    @foreach (VMTblCategory category in ViewBag.category)
                    {
                        if (category.Id == Model.CategoryId)
                        {
                            <option value="@category.Id" selected>@category.Name</option>
                        }
                        else
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="mb-3">
                <label>Description</label>
                <input type="text" name="Description" class="form-control" value="@Model.Description"/>
            </div>
        </div>
        <div class="card-footer">
            <input type="hidden" name="UpdateBy" value="2"/>
            <button type="submit" class="btn btn-primary" id="btnSave"> Save </button>
            <button type="button" class="btn btn-primary" id="btnCancel"> Cancel </button>
        </div>
    </form>
</div>

<script>
    $("#btnCancel").click(function () {
        $("#MyModal").modal("hide");
    });

    $("#frmEditVariant").validate({
        errorClass: "text-danger",
        rules: {
            Name: "required",
            categoryId: "required"
        }
    });
</script>