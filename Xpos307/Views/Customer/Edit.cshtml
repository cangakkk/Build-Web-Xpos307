@using Xpos307.ViewModels
@model VMTblCustomer
@{
    Layout = null;
}

<div class="h2">Customer</div>
<br>
<div class="card">
    <form id="frmEditCustomer" method="post" asp-action="Edit">
        <div class="card-header">Create New</div>
        <div class="card-body">
            <div class="mb-3">
                <label>Name</label>
                <input type="text" name="Name" class="form-control" value="@Model.Name"/>
                <input type="hidden" name="Id" value="@Model.Id">
            </div>
            <div class="mb-3">
                <label>Address</label>
                <input type="text" name="Address"  class="form-control" value="@Model.Address"/>
            </div>
            <div class="mb-3">
                <label>Phone</label>
                <input type="tel" name="Phone"  class="form-control" value="@Model.Phone"/>
            </div>
            <div class="mb-3">
                <label>RoleId</label>
                <input type="text" name="RoleId" class="form-control" value="@Model.RoleId"/>
            </div>
        </div>
        <div class="card-footer">
            <input type="hidden" name="UpdateBy" value="2" />
            <button type="submit" class="btn btn-primary" id="btnSave"> Save </button>
            <button type="button" class="btn btn-primary" id="btnCancel"> Cancel </button>
        </div>
    </form>
</div>

<script>
    $("#btnCancel").click(function () {
        $("#MyModal").modal("hide");
    });

    $("#frmEditCustomer").validate({
        errorClass: "text-danger",
        rules: {
            Name: "required"
        }
    });
</script>